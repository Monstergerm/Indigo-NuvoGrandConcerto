<?xml version="1.0"?>
<PluginConfig>
	<SupportURL>https://forums.indigodomo.com/viewtopic.php?f=134&amp;t=8312</SupportURL>
	
	<Field id="serialPortLabel" type="label" >
		<Label>Select the serial port connected to the NuVo Grand Concerto:</Label>
	</Field>
	
	<Field id="serialport" type="serialport" />
	
	<Field id="sep1" type="separator" />
	
	<!-- Debug settings -->
	<Field id="label" type="label" fontColor="darkgray" fontSize="small" alignWithControl="true">
		<Label>Set the level of information recorded to the Indigo log.</Label>
	</Field>

    <Field id="logLevel" type="menu" defaultValue="20">
        <Label>Event Logging Level:</Label>
        <List>
            <Option value="5">Detailed Debugging Messages</Option>
            <Option value="10">Debugging Messages</Option>
            <Option value="20">Informational Messages</Option>
            <Option value="30">Warning Messages</Option>
            <Option value="40">Error Messages</Option>
            <Option value="50">Critical Errors Only</Option>
        </List>
    </Field>            
	
</PluginConfig>